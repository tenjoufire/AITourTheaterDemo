@page "/"
@inject NavigationManager Navigation

<PageTitle>GiftPalette - みんなのためのギフト専門店</PageTitle>

<div class="home-container">
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">💝 GiftPalette</h1>
            <p class="hero-subtitle">あなたの大切な人への完璧なギフトを見つけよう</p>
            <p class="hero-description">
                幅広い年代と性別の方に愛される、特別なギフトアイテムを厳選してお届け。
                毎日を彩る素敵で実用的なアイテムで、大切な人を笑顔に。
            </p>
            <div class="hero-actions">
                <button class="btn btn-primary" @onclick="GoToProducts">
                    🛍️ 商品を見る
                </button>
                <button class="btn btn-secondary" @onclick="GoToCart">
                    🛒 カートを見る
                </button>
            </div>
        </div>
        <div class="hero-image">
            <div class="hero-decoration">
                <div class="decoration-item">🎁</div>
                <div class="decoration-item">💐</div>
                <div class="decoration-item">✨</div>
                <div class="decoration-item">🌸</div>
                <div class="decoration-item">💎</div>
                <div class="decoration-item">🦄</div>
            </div>
        </div>
    </section>

    <section class="features-section">
        <h2 class="section-title">GiftPaletteの特徴</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">🎯</div>
                <h3>幅広いセレクション</h3>
                <p>あらゆる年代・性別の方に喜ばれる、厳選されたギフトアイテム</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">💝</div>
                <h3>心温まるデザイン</h3>
                <p>見た目も素敵で、もらって嬉しい特別感のあるアイテムばかり</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">⚡</div>
                <h3>簡単注文</h3>
                <p>直感的な操作で簡単にお買い物。スムーズなカート機能で快適ショッピング</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">🚚</div>
                <h3>迅速配送</h3>
                <p>最短翌日お届け。大切な記念日にも間に合う迅速配送サービス</p>
            </div>
        </div>
    </section>

    <section class="categories-section">
        <h2 class="section-title">人気カテゴリー</h2>
        <div class="categories-grid">
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("アクセサリー"))">
                <div class="category-icon">💎</div>
                <h3>アクセサリー</h3>
                <p>ネックレス、ピアス、リングなど</p>
            </div>
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("美容・リラックス"))">
                <div class="category-icon">🌸</div>
                <h3>美容・リラックス</h3>
                <p>スキンケア、アロマ、バスグッズ</p>
            </div>
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("インテリア"))">
                <div class="category-icon">🏠</div>
                <h3>インテリア</h3>
                <p>雑貨、照明、時計など</p>
            </div>
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("ファッション"))">
                <div class="category-icon">👗</div>
                <h3>ファッション</h3>
                <p>バッグ、アクセサリー、小物など</p>
            </div>
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("テクノロジー"))">
                <div class="category-icon">📱</div>
                <h3>テクノロジー</h3>
                <p>スマートウォッチ、充電器、ガジェット</p>
            </div>
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("スポーツ・フィットネス"))">
                <div class="category-icon">⚽</div>
                <h3>スポーツ・フィットネス</h3>
                <p>フィットネス用品、アウトドア用品</p>
            </div>
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("キッチン用品"))">
                <div class="category-icon">🍳</div>
                <h3>キッチン用品</h3>
                <p>マグカップ、コーヒー、調理用品</p>
            </div>
            <div class="category-card" @onclick="@(() => GoToCategoryProducts("ホビー・ガーデニング"))">
                <div class="category-icon">🌱</div>
                <h3>ホビー・ガーデニング</h3>
                <p>ゲーム、ガーデニング、DIYキット</p>
            </div>
        </div>
    </section>

    <section class="cta-section">
        <div class="cta-content">
            <h2>今すぐ素敵なギフトを見つけよう</h2>
            <p>あなたの大切な人への特別な贈り物が、きっと見つかります</p>
            <button class="btn btn-cta" @onclick="GoToProducts">
                商品一覧を見る ✨
            </button>
        </div>
    </section>
</div>

@code {
    private void GoToProducts()
    {
        Navigation.NavigateTo("/products");
    }

    private void GoToCart()
    {
        Navigation.NavigateTo("/cart");
    }

    private void GoToCategoryProducts(string category)
    {
        Navigation.NavigateTo($"/products?category={Uri.EscapeDataString(category)}");
    }
}


