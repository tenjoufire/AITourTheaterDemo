@page "/order-confirmation/{OrderId:int}"
@page "/注文確認/{OrderId:int}"
@inject IOrderService OrderService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>注文確認 - GiftPalette</PageTitle>

<div class="container my-4">
    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">注文情報を読み込み中...</span>
            </div>
            <p class="mt-3 text-muted">注文情報を読み込み中...</p>
        </div>
    }
    else if (order == null)
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted">❌</div>
            <h3 class="mt-3">注文が見つかりません</h3>
            <p class="text-muted mb-4">指定された注文が見つかりませんでした。</p>
            <button class="btn btn-primary btn-lg" @onclick="GoHome">
                ホームに戻る
            </button>
        </div>
    }
    else
    {
        <div class="text-center py-4 mb-4">
            <div class="display-1 text-success">✅</div>
            <h1 class="display-5 mt-3">ご注文ありがとうございます！</h1>
            <p class="text-muted fs-5">注文が正常に受け付けられました。</p>
        </div>

        <div class="row">
            <!-- 注文詳細 -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">注文情報</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <strong>注文番号：</strong> @order.OrderNumber<br/>
                                <strong>注文日時：</strong> @order.CreatedAt.ToString("yyyy年MM月dd日 HH:mm")
                            </div>
                            <div class="col-md-6">
                                <strong>お客様名：</strong> @order.CustomerName<br/>
                                <strong>メールアドレス：</strong> @order.CustomerEmail
                            </div>
                        </div>
                        <div class="mb-3">
                            <strong>お届け先住所：</strong><br/>
                            <span class="text-muted">@order.ShippingAddress</span>
                        </div>
                        <div class="text-end">
                            <h5 class="text-primary">合計金額：¥@order.TotalAmount.ToString("N0")</h5>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">ご注文商品</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in order.Items)
                        {
                            <div class="row align-items-center mb-3 p-3 bg-light rounded">
                                <div class="col-md-2 col-sm-3">
                                    <img src="@item.ImageUrl" alt="@item.ProductName" 
                                         class="img-fluid rounded" style="height: 80px; object-fit: contain;">
                                </div>
                                <div class="col-md-4 col-sm-9">
                                    <h6 class="mb-1">@item.ProductName</h6>
                                    <p class="text-primary mb-0">単価: ¥@item.Price.ToString("N0")</p>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <span class="fw-bold">数量: @item.Quantity 個</span>
                                </div>
                                <div class="col-md-3 col-sm-4 text-end">
                                    <div class="fw-bold text-success">
                                        小計: ¥@((item.Price * item.Quantity).ToString("N0"))
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- サイドバー -->
            <div class="col-md-4">
                <div class="card sticky-top" style="top: 2rem;">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">今後の流れ</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-start mb-3">
                            <div class="badge bg-primary rounded-circle me-3" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">1</div>
                            <div>
                                <h6 class="mb-1">確認メール送信</h6>
                                <small class="text-muted">ご登録いただいたメールアドレスに確認メールをお送りします。</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-start mb-3">
                            <div class="badge bg-primary rounded-circle me-3" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">2</div>
                            <div>
                                <h6 class="mb-1">商品準備</h6>
                                <small class="text-muted">1-2営業日以内に商品の準備を開始いたします。</small>
                            </div>
                        </div>
                        <div class="d-flex align-items-start mb-3">
                            <div class="badge bg-primary rounded-circle me-3" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">3</div>
                            <div>
                                <h6 class="mb-1">発送・お届け</h6>
                                <small class="text-muted">準備完了後、発送いたします。お届けまで3-5営業日程度お時間をいただきます。</small>
                            </div>
                        </div>
                        
                        <hr/>
                        
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" @onclick="GoToProducts">
                                他の商品も見る
                            </button>
                            <button class="btn btn-outline-secondary" @onclick="GoToOrderHistory">
                                注文履歴を確認
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int OrderId { get; set; }
    
    private Order? order;
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        order = await OrderService.GetOrderAsync(OrderId);
        loading = false;
    }

    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private void GoToProducts()
    {
        Navigation.NavigateTo("/products");
    }

    private void GoToOrderHistory()
    {
        Navigation.NavigateTo("/order-history");
    }
}

