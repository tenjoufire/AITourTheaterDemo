@using GiftPalette.Components.Shared
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>

    <!-- Floating Chat Button -->
    <button class="floating-chat-btn @(isChatVisible ? "hidden" : "")" @onclick="OpenChat">
        💬 エージェントに相談する
    </button>

    <!-- Chat Component -->
    <ChatComponent IsVisible="isChatVisible" OnClose="CloseChat" @rendermode="InteractiveServer" />
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool isChatVisible = false;

    private void OpenChat()
    {
        isChatVisible = true;
    }

    private void CloseChat()
    {
        isChatVisible = false;
    }
}
