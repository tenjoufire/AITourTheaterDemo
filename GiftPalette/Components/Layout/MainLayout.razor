@using GiftPalette.Components.Shared
@using GiftPalette.Services
@inject ChatStateService ChatStateService
@inherits LayoutComponentBase
@implements IDisposable

<div class="page @(isChatVisible ? "chat-open" : "")">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>

    <!-- Chat Overlay Component -->
    <ChatOverlay @rendermode="InteractiveServer" />
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool isChatVisible = false;

    protected override void OnInitialized()
    {
        ChatStateService.ChatVisibilityChanged += OnChatStateChanged;
        isChatVisible = ChatStateService.IsChatVisible;
    }

    private async void OnChatStateChanged(bool isVisible)
    {
        if (isChatVisible != isVisible)
        {
            isChatVisible = isVisible;
            await InvokeAsync(StateHasChanged);
        }
    }

    public void Dispose()
    {
        ChatStateService.ChatVisibilityChanged -= OnChatStateChanged;
    }
}
